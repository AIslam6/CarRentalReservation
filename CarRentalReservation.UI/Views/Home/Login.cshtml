@model CarRentalReservation.UI.Models. LoginViewModel

@{
    ViewBag.Title = "Login";
}
<style>

    input {
        max-width: 1140px;
    }

    .wid {
        width: 100%;
    }
</style>
<div class="card">
    <!-- /.login-logo -->
    <div class=" card-body">
        @using (Html.BeginForm("Login", "Home", new { returnUrl = ViewBag.ReturnUrl }))
        {
         <h4>Login</h4>   
            
         <div>Username</div>
         @Html.TextBoxFor(model => model.Login.Username, new { @class = "form-control"})
        <div>Password</div>
      //   @Html.TextBoxFor(m => m.Login.Password, new { @class="form-control"})
        @Html.PasswordFor(m => m.Login.Password, new { @class="form-control"})
            
             
            <div style="height:20px;"></div>
             <div class="form-group">            
                 <button class="btn btn-primary" type="submit" name="action" value="Login">Login</button>         
             </div>   
        <div style="height:20px;"></div>
        
        }
</div>
</div>